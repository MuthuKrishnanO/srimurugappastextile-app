<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main_layout"
    style="@style/loginParent"
    android:background="@drawable/sriback"
   >
    <ScrollView
        style="@style/parent">

        <RelativeLayout

            style="@style/parent">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp">


                <TextView
                    style="@style/headerText"
                    android:layout_gravity="center"

                    android:layout_marginTop="40dp"/>

                <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    style="@style/loginCard"
                    app:cardCornerRadius="@dimen/loginCardRadius"
                    android:elevation="15dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_50dp"

                    android:layout_marginBottom="@dimen/loginViewsMargin"
                    android:background="@color/whiteCardColor">



                    <LinearLayout
                        style="@style/linearParent"
                        android:layout_gravity="center"

                        android:padding="@dimen/loginViewsMargin">

                        <TextView
                            style="@style/headerTextPrimary"
                            android:text="Login"
                            android:layout_marginTop="@dimen/loginViewsMargin"/>


                            <EditText

                                android:id="@+id/user_name_et"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp"

                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/rect_edit_text"
                                android:drawableStart="@drawable/ic_userview"
                                android:drawableLeft="@drawable/ic_userview"
                                android:fontFamily="@font/secular_one"
                                android:gravity="center"
                                android:hint="@string/login_activity_et_user_name"
                                android:inputType="number"
                                android:maxLines="1"
                                android:paddingStart="8dp"
                                android:textColor="@android:color/black"
                                android:textColorHint="#a7a5a5"

                                android:textSize="15dp" />





                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp"
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="12dp"
                            android:paddingTop="2dp" >

                            <CheckBox
                                style="@style/viewParent"
                                android:id="@+id/show_hide_password"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="start"
                                android:text="@string/login_activity_remberPassword"
                                android:buttonTint="@color/primaryTextColor"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="@dimen/newsMoreTextSize"
                                />

                            <TextView
                                android:id="@+id/forgetpassword"
                                style="@style/viewParent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="textEnd"
                                android:text="Forgot Password?"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="@dimen/newsMoreTextSize"


                                android:layout_marginTop="10dp"/>
                        </LinearLayout>



                        <Button
                             android:id="@+id/btn_login"
                            style="@style/loginButton"
                            android:text="Send Otp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/loginViewsMargin"/>

                        <TextView
                            android:id="@+id/signup"
                            style="@style/parent"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"
                            android:text="@string/login_signup_hint"

                            android:layout_marginTop="@dimen/loginViewsMargin"/>
                        <TextView
                            android:visibility="gone"

                            android:id="@+id/tv_android_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/source_sans_pro"
                            android:gravity="center"
                            android:text="androidId"
                            android:textColor="#979393"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>





