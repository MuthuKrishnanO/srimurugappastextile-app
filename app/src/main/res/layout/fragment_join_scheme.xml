<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/dialogue_bg"
    tools:context=".DialogueFragment.JoinSchemeFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:background="@drawable/adapter_background"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/source_sans_pro"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:text="@string/JoinnewScheme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/linerpad"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2.5">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="@string/branchName"
                android:fontFamily="@font/source_sans_pro"
                android:textStyle="bold"
                android:textColor="@color/GREYCOLOR"
                android:textAllCaps="true"
                android:textSize="@dimen/textsize"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:text=":"

                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/textsize"
                android:layout_height="wrap_content"
                />


            <TextView
                android:id="@+id/branch_name"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"

                android:fontFamily="@font/source_sans_pro"
                android:textAllCaps="true"
                android:textColor="@color/GREYCOLOR"
                android:textSize="@dimen/textsize"
                android:textStyle="bold" />



        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="2.5">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:textColor="@color/GREYCOLOR"
                android:text="@string/schemename"
                android:fontFamily="@font/source_sans_pro"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="@dimen/textsize"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:text=":"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/textsize"
                android:layout_height="wrap_content"
                />

            <TextView
                android:textColor="@color/GREYCOLOR"
                android:id="@+id/schemename"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:fontFamily="@font/source_sans_pro"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="@dimen/textsize"/>


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="2.5">
            <TextView
                android:textColor="@color/GREYCOLOR"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="@string/amount"
                android:fontFamily="@font/source_sans_pro"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="@dimen/textsize"
                />


            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:text=":"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/textsize"
                android:layout_height="wrap_content"
                />

            <TextView
                android:textColor="@color/GREYCOLOR"
                android:id="@+id/schemeamount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:fontFamily="@font/source_sans_pro"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="@dimen/textsize"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="2.5">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="@string/btn_start_date"
                android:textColor="@color/GREYCOLOR"
                android:fontFamily="@font/source_sans_pro"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="@dimen/textsize"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:text=":"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/textsize"
                android:layout_height="wrap_content"
                />

            <EditText
                android:id="@+id/et_online_startdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize"
                android:layout_weight="1.1"
                android:background="@null"
                android:focusable="false"
                android:textColor="@color/GREYCOLOR"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/source_sans_pro"
                android:textStyle="bold"
                android:textAllCaps="true"


                android:textColorHint="@color/colorPrimaryDark" />


        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="2.5">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="@string/btn_end_date"
                android:textColor="@color/GREYCOLOR"
                android:fontFamily="@font/source_sans_pro"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="@dimen/textsize"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:text=":"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/textsize"
                android:layout_height="wrap_content"
                />

            <TextView
                android:textColor="@color/GREYCOLOR"
                android:id="@+id/et_online_enddate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:fontFamily="@font/source_sans_pro"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="@dimen/textsize"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="2.5">
            <TextView
                android:textColor="@color/GREYCOLOR"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="@string/todaydurration"
                android:fontFamily="@font/source_sans_pro"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="@dimen/textsize"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:text=":"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/textsize"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textColor="@color/GREYCOLOR"
                android:id="@+id/schemeduration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:fontFamily="@font/source_sans_pro"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="@dimen/textsize"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/gold22"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="2.5">
            <TextView
                android:textColor="@color/GREYCOLOR"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="@string/gold22k"
                android:fontFamily="@font/source_sans_pro"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="@dimen/textsize"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:text=":"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/textsize"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textColor="@color/GREYCOLOR"
                android:id="@+id/txtgold22k"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:fontFamily="@font/source_sans_pro"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="@dimen/textsize"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/gold24"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="2.5">
            <TextView
                android:textColor="@color/GREYCOLOR"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="@string/gold24k"
                android:fontFamily="@font/source_sans_pro"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="@dimen/textsize"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:text=":"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/textsize"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textColor="@color/GREYCOLOR"
                android:id="@+id/txtgold24k"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:fontFamily="@font/source_sans_pro"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="@dimen/textsize"/>


        </LinearLayout>





    </LinearLayout>

    <LinearLayout
        android:id="@+id/sendlay111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2"
        >

        <Button
            android:id="@+id/btn_cancel_activate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/btn_cancel"
            android:textAllCaps="true"
            android:background="@drawable/adapter_background"
            android:textColor="@android:color/white"
            />

        <Button
            android:layout_marginLeft="2dp"
            android:id="@+id/pay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/btn_proceed"
            android:textAllCaps="true"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:background="@drawable/adapter_background"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>