<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@color/red"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragment.HomeFragment">
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/loginCard"
        app:cardCornerRadius="@dimen/loginCardRadius"
        android:elevation="5dp"
        android:id="@+id/card"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/loginViewsMargin"
        android:layout_marginBottom="@dimen/loginViewsMargin"
        android:layout_marginLeft="@dimen/loginViews"
        android:layout_marginRight="@dimen/loginViews"
        android:background="@color/whiteCardColor">

    <com.smarteist.autoimageslider.SliderLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:id="@+id/imageSlider"/>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView

        style="@style/loginCard"
        app:cardCornerRadius="10dp"
        android:elevation="5dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/loginViewsMargin"
        android:layout_marginLeft="@dimen/loginViews"
        android:layout_marginRight="@dimen/loginViews"
        android:background="@color/whiteCardColor">


        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_alignBottom="@+id/card"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/source_sans_pro"
                android:gravity="end"
                android:src="@mipmap/ic_murugapa_round"

                />

           <!-- <TextView
                android:text=""
                android:gravity="center"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/source_sans_pro"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"/>-->
            <TextView
                android:id="@+id/branchName"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:gravity="left"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/source_sans_pro"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>





        </LinearLayout>
    </androidx.cardview.widget.CardView>






</LinearLayout>


<LinearLayout  android:layout_width="match_parent"
    android:layout_below="@+id/main"
    android:layout_height="wrap_content"
    android:orientation="vertical">


     <!--   <TextView

            android:id="@+id/contactus"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="-4dp"
            android:fadingEdge="horizontal"
            android:layout_below="@+id/aboutview"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="sans-serif-condensed"
            android:freezesText="true"
            android:padding="10dp"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:scrollHorizontally="true"
            android:textColor="#807D7D"

            android:textSize="@dimen/text_Content"
            android:textStyle="bold" />-->




        <LinearLayout
            android:id="@+id/mvale"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:visibility="gone"

            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.5"

                android:src="@drawable/goldcoin"
                />
            <TextView
                android:text="24K/gm"
                android:textSize="@dimen/text_Content"
                android:gravity="center"
                android:fontFamily="@font/source_sans_pro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/gold24k"
                android:textSize="@dimen/text_Content"
                android:gravity="center"
                android:fontFamily="@font/source_sans_pro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"/>
        </LinearLayout>



        <TextView
            android:id="@+id/aboutview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rate2"
            android:layout_marginTop="4dp"
            android:fadingEdge="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/source_sans_pro"
            android:freezesText="true"
            android:lines="1"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="10dp"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="About US"
            android:textColor="#5E5C5C"
            android:textSize="@dimen/text_Content"
            android:textStyle="bold" />


        <TextView

            android:id="@+id/aboutus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aboutview"
            android:layout_marginTop="-4dp"
            android:fadingEdge="horizontal"

            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/source_sans_pro"
            android:freezesText="true"
            android:padding="10dp"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:scrollHorizontally="true"
            android:textColor="#807D7D"
            android:textSize="15dp"
            android:textStyle="bold" />
    <include layout="@layout/settings_view_divider" />

        <TextView

            android:id="@+id/contactustitle"
            android:text="Contact Us"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aboutus"
            android:layout_marginTop="-4dp"
            android:fadingEdge="horizontal"

            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/source_sans_pro"
            android:freezesText="true"
            android:padding="10dp"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:scrollHorizontally="true"
            android:textColor="#5E5C5C"
            android:textSize="@dimen/text_Content"
            android:textStyle="bold" />

       <LinearLayout
           android:id="@+id/allcontact"
           android:layout_below="@+id/contactustitle"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:weightSum="2"
           android:orientation="horizontal"
           >

           <TextView
               android:drawableLeft="@drawable/ic_baseline_call_24"
               android:id="@+id/text"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:fadingEdge="horizontal"
               android:focusable="true"
               android:focusableInTouchMode="true"
               android:fontFamily="@font/source_sans_pro"
               android:freezesText="true"
               android:lines="1"
               android:marqueeRepeatLimit="marquee_forever"
               android:padding="10dp"
               android:paddingLeft="15dip"
               android:paddingRight="15dip"
               android:scrollHorizontally="true"
               android:singleLine="true"
               android:textColor="#5E5C5C"
               android:textSize="15dp"
               android:textStyle="bold" />




       </LinearLayout>

    <TextView
        android:id="@+id/branchadress"
        android:drawableLeft="@drawable/ic_baseline_location_on_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:layout_below="@+id/text"
        android:layout_marginTop="0dp"
        android:fadingEdge="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/source_sans_pro"



        android:padding="10dp"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:scrollHorizontally="true"

        android:textSize="15dp"
        android:textStyle="bold" />

</LinearLayout>







    </RelativeLayout>
</ScrollView>