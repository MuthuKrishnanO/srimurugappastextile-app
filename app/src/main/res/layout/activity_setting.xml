<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appbar_home"
        android:layout_height="50dp">
        <androidx.appcompat.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/toolbar_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/menuTitle"
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:textSize="20dp"
                    android:textAlignment="textStart"
                    android:gravity="center"
                    android:fontFamily="@font/source_sans_pro"
                    android:textColor="@color/white"
                    android:layout_height="match_parent"
                    tools:ignore="RtlCompat" />

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/login_shape_bk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:padding="16dp"

            android:orientation="vertical">
            <ImageView

                android:layout_gravity="center_horizontal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/vector_drawable_man_white"/>
            <TextView
                android:id="@+id/subscriber_name"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wiliam Snoe"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="@dimen/textsize"/>
        </LinearLayout>

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:textStyle="bold"

        android:layout_marginStart="10dp"
        android:fontFamily="@font/source_sans_pro"
        android:text="My Account :"/>

    <include
        layout="@layout/settings_view_divider" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginTop="2dp"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_operator"/>
            <TextView
                android:id="@+id/operator_name"
                android:textStyle="bold"
                android:gravity="center"

                android:fontFamily="@font/source_sans_pro"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:textAllCaps="true"
                android:textSize="@dimen/textsize"
                android:text="@string/Personal"/>
        </LinearLayout>


    </LinearLayout>
    <include
        layout="@layout/settings_view_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"


        android:paddingLeft="25dp"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_keyhole"/>
        <TextView
            android:id="@+id/key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:drawablePadding="10dp"
            android:fontFamily="@font/source_sans_pro"
            android:layout_gravity="center_vertical"
            android:paddingLeft="22dp"
            android:text="@string/m_settings_change_pass"
            android:textAllCaps="true"

            android:textSize="@dimen/textsize" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:paddingLeft="25dp"
        android:layout_marginTop="5dp"
        >
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_info"/>
        <TextView
            android:id="@+id/about"
            android:background="@drawable/ripple_touch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:drawablePadding="10dp"
            android:fontFamily="@font/source_sans_pro"
            android:layout_gravity="center_vertical"
            android:paddingLeft="22dp"
            android:text="@string/about"
            android:textAllCaps="true"

            android:textSize="@dimen/textsize" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="25dp"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_power_button_outline"/>
        <TextView
            android:id="@+id/Log_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_touch"
            android:clickable="true"

            android:textStyle="bold"
            android:drawablePadding="10dp"
            android:fontFamily="@font/source_sans_pro"
            android:layout_gravity="center_vertical"
            android:paddingLeft="22dp"
            android:text="@string/toolbar_logout"
            android:textAllCaps="true"

            android:textSize="@dimen/textsize" />
    </LinearLayout>




</LinearLayout>




